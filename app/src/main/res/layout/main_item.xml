<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="168dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="#ffffff"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/estimateCount"
                android:layout_width="64dp"
                android:layout_height="18dp"
                android:layout_marginLeft="12dp"
                android:textColor="#757575"
                android:textSize="14sp"
                tools:text="견적 10 건" />

            <Space
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="172dp"
                android:layout_height="18dp"
                android:gravity="center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:singleLine="true"
                    android:textColor="#00bfa5"
                    android:textSize="14sp"
                    tools:text="마감 03 : 26 전" />
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <ToggleButton
                android:id="@+id/star"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/favorite_icon_selector"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="328dp"
            android:layout_height="128dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loanTypeImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_favorite" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="231dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/requestAddress"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:text="세종특별자치시 세종특별자치시 조치원읍"
                        android:textColor="#262637"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/requestAddressApt"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:text="대덕테크노밸리(11단지)감사"
                        android:textColor="#262637"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/requestAddressSize"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:text="109.42㎡ / 89.98㎡"
                        android:textColor="#262637"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/item_border"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="대출금액"
                        android:textColor="#757575"
                        android:textSize="10sp" />

                    <Space
                        android:layout_width="1dp"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/requestPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        tools:text="2.8억" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="직업구분"
                        android:textColor="#757575"
                        android:textSize="10sp" />

                    <Space
                        android:layout_width="1dp"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/requestJobType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        tools:text="개인사업자" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="금리방식"
                        android:textColor="#757575"
                        android:textSize="10sp" />

                    <Space
                        android:layout_width="1dp"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/loanType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        tools:text="없음" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>