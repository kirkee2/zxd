<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.hellmoney.thca.view.NoticeDetailActivity">

        <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F6"
                android:gravity="center_horizontal"
                android:orientation="vertical"

                >

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:paddingTop="6dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/bottomLinear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/barChart"
                                android:layout_width="match_parent"
                                android:layout_height="168dp"
                                android:layout_marginBottom="6dp"
                                android:layout_weight="0.67"
                                android:paddingEnd="6dp"
                                android:paddingStart="6dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="50">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="18dp"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginTop="18dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/quotation_result_count"
                                        android:textColor="@color/normalTypo"
                                        android:textSize="@dimen/small" />

                                    <TextView
                                        android:id="@+id/finalQuotationCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="11dp"
                                        android:layout_marginRight="11dp"
                                        android:layout_marginTop="11dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/normalTypo"
                                        android:textSize="@dimen/large"
                                        tools:text="3"/>
                                </RelativeLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/subNormal"
                                    />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="50"
                                    android:background="@android:color/white">

                                    <TextView
                                        android:layout_width="66dp"
                                        android:layout_height="19dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="18dp"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginTop="18dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/average_mola"
                                        android:textColor="@color/normalTypo"
                                        android:textSize="@dimen/small" />

                                    <TextView
                                        android:id="@+id/averageInterestRate"
                                        android:layout_width="70dp"
                                        android:layout_height="33dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="11dp"
                                        android:layout_marginRight="11dp"
                                        android:layout_marginTop="11dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/normalTypo"
                                        android:textSize="@dimen/large" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/empty_data_layout"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:background="#ffffff"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/empty_estimate_image_view"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:src="@drawable/no_collect_estimate"/>

                        <TextView
                            android:id="@+id/empty_estimate_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/empty_estimate_image_view"
                            android:layout_gravity="center"
                            android:text="아직 모집된 견적이 없습니다."
                            android:textColor="#757575"
                            android:textSize="18sp"/>
                    </RelativeLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:paddingTop="6dp"></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:paddingBottom="30dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:id="@+id/endTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:textColor="#00bfa5"
                            android:textSize="14sp"
                            tools:text="마감 03시간 26분 전" />

                        <ToggleButton
                            android:id="@+id/star"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/favorite_icon_selector"
                            android:textOff=""
                            android:textOn="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/loanTypeImageView"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="12dp"
                                android:src="@drawable/ic_favorite" />

                            <Space
                                android:layout_width="2dp"
                                android:layout_height="48dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:background="#bdbdbd" />

                            <LinearLayout
                                android:layout_width="231dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/requestAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="16dp"
                                    android:text="세종특별자치시 세종특별자치시 조치원읍"
                                    android:textColor="#262637"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/requestAddressApt"
                                    android:layout_width="match_parent"
                                    android:layout_height="16dp"
                                    android:text="대덕테크노밸리(11단지)감사"
                                    android:textColor="#262637"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/requestAddressSize"
                                    android:layout_width="match_parent"
                                    android:layout_height="16dp"
                                    android:text="109.42㎡ / 89.98㎡"
                                    android:textColor="#262637"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="대출한도"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/requestLimitAmount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="#262637"
                                android:textSize="14sp"
                                tools:text="38000만원" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="대출금액"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/loanAmount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="#262637"
                                android:textSize="14sp"
                                tools:text="1.5억" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="금리방식"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/typeLoan"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="#262637"
                                android:textSize="14sp"
                                tools:text="고정" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="직업구분"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/jobType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="#262637"
                                android:textSize="14sp"
                                tools:text="개인사업자" />

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="실행예정일"
                                android:textColor="#757575"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/scheduledTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="#262637"
                                android:textSize="14sp"
                                tools:text="17.06.13" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/calledAddEstimate"
                            android:layout_width="296dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="#00bfa5"
                            android:text="견적서 작성"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>