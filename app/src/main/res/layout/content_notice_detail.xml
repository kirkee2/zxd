<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_centerVertical="true" />

    <include layout="@layout/notice_item" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:id="@+id/notice_detail_header_space"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/notice_content_text_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notice_detail_header_space"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:gravity="center"
                android:lineSpacingExtra="9sp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:textColor="#262637"
                android:textSize="18sp"
                tools:text="더 좋은 서비스를 만들기 위하여 시스템 업데이트를 실시 합니다. 업데이트 중에는 서비스 이용이 중지되오니 양해 바랍니다." />

            <Space
                android:id="@+id/notice_detail_middle_space"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/notice_content_text_view"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/notice_register_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notice_detail_middle_space"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="9sp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:textColor="#757575"
                android:textSize="18sp"
                tools:text="2017년 9월 1일" />

            <Space
                android:id="@+id/notice_detail_footer_space"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/notice_register_time_text_view"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
