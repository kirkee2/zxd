<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hellmoney.thca.fragment.ErrorFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/network_failed_image"
            android:layout_width="125dp"
            android:layout_height="92dp"
            android:layout_marginTop="146dp"
            android:scaleType="fitXY"
            android:src="@drawable/network_failed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/network_failed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b7b7b7"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@id/network_failed_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="인터넷 연결을 다시 확인해보세요" />
        
        <Button
            android:id="@+id/network_refresh_button"
            android:layout_width="136dp"
            android:layout_height="44dp"
            android:text="다시 시도하기"
            android:textSize="16sp"
            android:textColor="#b2ffffff"
            android:gravity="center"
            android:background="#24aaf2"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/network_failed_text"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
